from golang:1.13 as builder
WORKDIR /app
COPY ./ ./

ENV GOPATH /go
ENV CGO_ENABLED 0
ENV GO111MODULE on
ENV GOPROXY=https://goproxy.io

RUN go mod download
RUN go build ./main/pipeline

FROM alpine
COPY --from=builder /app/pipeline /usr/bin/pipeline
RUN chmod +x /usr/bin/pipeline
EXPOSE 8080

ENTRYPOINT ["/usr/bin/pipeline"]
